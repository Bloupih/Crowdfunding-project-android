<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBlocLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Bloc"
    android:background="@drawable/customborder"
    android:layout_margin="40dp">

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:background="#C0C0C0"
        android:padding="3dp"/>
    
    <TextView
        android:id="@+id/projectTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:padding="3dp"/>
    
    <LinearLayout
        android:id="@+id/moneyLayout"
        android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:background="#B1D0FF"
	    android:padding="3dp">
        
        <TextView
            android:id="@+id/moneyObjectif"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#B1D0FF"
	        android:textColor="#FFFFFF"/>
        
        <TextView
            android:id="@+id/moneyCollected"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#B1D0FF"
	        android:textColor="#FFFFFF"/>
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/projectContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:padding="3dp"/>
    
    <Button
        android:id="@+id/buttonDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView
        android:id="@+id/projectCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:padding="3dp"/>
    
    <ProgressBar
        android:id="@+id/projectCompletedBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/progressbarblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/background_light"/>

</LinearLayout>
